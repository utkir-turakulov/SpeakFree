<!-- Danger modal -->
<div id="delete-message-modal" class="modal fade" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger">
                <h6 class="modal-title">Удаление</h6>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <h6 class="font-weight-semibold">Вы уверены что хотите удалить сообщение?</h6>                
            </div>
            <div class="modal-footer">
                <form asp-controller="TaskBoard" asp-action="Delete" method="post" >
                    <input name="messageId" hidden type="number" value="">
                    <input name="returnUrl" hidden value="TaskBoard/GetTasks"/>
                    <button type="button" class="btn btn-link" data-dismiss="modal">Close</button>
                    <input type="submit" class="btn bg-danger"  onclick="alert('Запись удалена')" value="Удалить"><!--Save changes</input>-->
                </form>                
            </div>
        </div>
    </div>
</div>